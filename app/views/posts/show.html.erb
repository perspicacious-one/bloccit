<h1>
  <%= @post.title %> <br>
</h1>
<h4>
  <small>
    submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
  </small>
</h4>
<div class="row">
  <% if user_is_authorized_for_post?(@post) %>
    <div class="col-md-4">
      <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success btn-sm' %>
      <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this post?' } %>
    </div>
  <% end %>
  <div class="col-md-8">
  <p><%= @post.body %></p>
    <h3>Comments <span class="badge badge-primary"><%= @post.comments.count %></h3>
      <div class="list-group">
        <%= render @post.comments %>
      </div>
      <% if current_user %>
    <!-- #20 -->
      <%= render 'comments/form', comment: Comment.new, post: @post %>
    <% end %>
  </div>
</div>
