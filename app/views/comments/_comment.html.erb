<%= content_tag :div, class: 'list-group-item flex-column align-items-start', id: "comment-#{comment.id}" do %>
  <div class="d-flex justify-content-between">
    <small class="mb-1">
      <b><%= comment.user.name %></b> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if user_is_authorized_for_comment?(comment) %>
        | <%= link_to "Delete", [@post, comment], method: :delete, class: "text-danger"%>
      <% end %>
    </small>
    <p class="mb-1"><%= comment.body %></p>
  </div>
<% end %>
