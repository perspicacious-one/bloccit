<h1>New Advertisement</h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :copy, rows: 6, class: 'form-control', placeholder: "Enter ad copy" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_area :price, rows: 2, class: 'form-control', placeholder: "Enter price" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
